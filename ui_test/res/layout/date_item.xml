<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/root" android:layout_width="fill_parent" android:layout_height="wrap_content"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:orientation="horizontal"
         android:id="@+id/content" 
         android:background="@drawable/selector_white_gray_click" 
         android:paddingLeft="13.0dip" 
         android:paddingTop="19.0dip" 
         android:paddingRight="13.0dip" 
         android:paddingBottom="19.0dip" 
         android:layout_width="fill_parent" 
         android:layout_height="wrap_content">
        <LinearLayout 
            android:orientation="horizontal" 
            android:layout_width="wrap_content" 
            android:layout_height="fill_parent">
            <ImageView android:id="@+id/logo" 
                android:layout_width="58.0dip" 
                android:layout_height="58.0dip" 
                android:src="@drawable/icon_default" 
                android:adjustViewBounds="true" 
                android:contentDescription="@null" />
        </LinearLayout>
        <LinearLayout 
            android:gravity="center_vertical" 
            android:orientation="vertical" 
            android:layout_width="fill_parent" 
            android:layout_height="fill_parent" 
            android:layout_marginLeft="13.0dip">
            <TextView android:textSize="16.0sp" 
                android:textColor="@drawable/selector_com_special_item_title_text" 
                android:ellipsize="end" 
                android:id="@+id/title" 
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content" 
                android:singleLine="true" />
            <TextView android:textSize="13.0sp" 
                android:textColor="@drawable/selector_com_special_item_award_text" 
                android:ellipsize="end" 
                android:id="@+id/info" 
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content" 
                android:layout_marginTop="6.0dip" 
                android:singleLine="true" />
            <TextView android:textSize="13.0sp" 
                android:textColor="@drawable/selector_com_special_item_text" 
                android:ellipsize="end" 
                android:id="@+id/detail" 
                android:layout_width="fill_parent" 
                android:layout_height="wrap_content" 
                android:layout_marginTop="6.0dip" 
                android:singleLine="true" />
        </LinearLayout>
    </LinearLayout>

    <ImageView android:id="@+id/right_arrow" 
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content" 
        android:src="@drawable/icon_right1" 
        android:layout_alignParentRight="true" 
        android:layout_centerVertical="true" 
        android:contentDescription="@null" />
</RelativeLayout>